<div class="uk-flex uk-flex-middle">
  <a href="<%= plans_path(page: params[:page], scope: params[:scope]) %>" class="button grey"
      uk-tooltip="title: Back To All Plans ; delay: 500 ; pos: top ;">
      <i class="icon-material-outline-arrow-back"></i> Back To All Plans
  </a>
</div>


<div class="pricing-plans-container uk-width-1-3@m">

        <div class="pricing-plan uk-flex-first@s px-6 uk-width-1-3">
            <h3 class="text-brown mb-1" style="color: <%= @plan.color %>!important;"><%= @plan.name %></h3>
            <div class="description">
              <%= @plan.description %>
            </div>
            <ul class="uk-switcher" id="change-plan" style="touch-action: pan-y pinch-zoom;">
                <li class="uk-active">
                  <div class="pricing-plan-label"><strong style="color:<%= @plan.color %>;"><%= @plan.free? ? "FREE" : number_to_currency(@plan.amount, precision: 0) %><%= @plan.friendly_interval %></strong></div>
                </li>
            </ul>
            <p><a class="btns btn-brown" style="background: <%= @plan.color %>;color:#FFF;border-color: <%= @plan.color %>;1.5px solid <%= @plan.color %>;">SELECT PLAN</a></p>
            <% if @plan.has_features? %>
              <div class="pricing-plan-features mt-3">
                  <strong>Features of Free Plan</strong>
                  <ul>
                      <li><%= @plan.feature_1 %>
                        <% if @plan.feature_1_help_text.present? %>
                          <i uk-tooltip="<%= @plan.feature_1_help_text %>" class="icon-feather-info" title="" aria-expanded="false"></i>
                        <% end %>
                      </li>
                      <li><%= @plan.feature_2 %>
                        <% if @plan.feature_2_help_text.present? %>
                          <i uk-tooltip="<%= @plan.feature_2_help_text %>" class="icon-feather-info" title="" aria-expanded="false"></i>
                        <% end %>
                      </li>
                      <li><%= @plan.feature_3 %>
                        <% if @plan.feature_3_help_text.present? %>
                          <i uk-tooltip="<%= @plan.feature_3_help_text %>" class="icon-feather-info" title="" aria-expanded="false"></i>
                        <% end %>
                      </li>
                      <li><%= @plan.feature_4 %>
                        <% if @plan.feature_4_help_text.present? %>
                          <i uk-tooltip="<%= @plan.feature_4_help_text %>" class="icon-feather-info" title="" aria-expanded="false"></i>
                        <% end %>
                      </li>
                      <li><%= @plan.feature_5 %>
                        <% if @plan.feature_5_help_text.present? %>
                          <i uk-tooltip="<%= @plan.feature_5_help_text %>" class="icon-feather-info" title="" aria-expanded="false"></i>
                        <% end %>
                      </li>
                  </ul>
              </div>
            <% end %>
        </div>


    </div>
