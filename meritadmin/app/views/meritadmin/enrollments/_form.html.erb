<%= form_for([@course, @enrollment], html: { "uk-grid" => true, class: "uk-grid-small large form #{'error' if flash[:error]} #{'notice' if flash[:notice]}" }) do |f| %>
  <div class="uk-width-1-3">
    <div class="uk-form-label"> Student </div>
    <%= f.select :student_id, options_from_collection_for_select(Student.all, :id, :friendly_name, @enrollment&.student&.id.to_s), {}, class: "uk-select", required: true %>
  </div>
  <div class="uk-width-1-3">
    <div class="uk-form-label"> Enrollment Status </div>
    <%= f.select :enrollment_status, options_for_select(t("enrollment_statuses"), @enrollment&.enrollment_status), {}, class: "uk-select", required: true %>
  </div>
  <div class="uk-width-1-3">
    <div class="uk-form-label"> Enrollment Date </div>
    <%= f.datetime_field :enrollment_date, class: "uk-input", minlength: 2, maxlength: 255, required: true %>
  </div>

  <div class="uk-width-1-1">
    <input class="button grey uk-width-1-1@s uk-width-1-4@m mt-3 ml-0 mr-0" type="submit" class="button" value="Save">
  </div>
<% end %>
