<div class="uk-flex uk-flex-middle">
  <h3 class="mb-0 mr-3"> <i class="icon-material-outline-description"></i> Form Submissions </h3>
</div>

<div class="uk-overflow-auto uk-card uk-card-default pt-3 uk-card-body rounded">
    <table class="uk-table uk-table-hover uk-table-middle uk-table-divider">
        <thead>
            <tr class="uk-text-small uk-text-bold">
                <th>Submission ID</th>
                <th>Form Name</th>
                <th>Created</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
          <% @form_submissions&.reverse&.each do |form_submission| %>
            <tr data-row-id="<%= form_submission.id %>">
                <td> <%= form_submission.id %></td>
                <td> <%= form_submission.form.name %></td>
                <td> <%= friendly_date(form_submission.created_at) %> </td>
                <td>
                    <a href="/forms/<%= form_submission.form.slug %>/form_submissions/<%= form_submission.id %>" target="_blank" class="button soft-success">
                        <i class="fas fa-eye uk-visible@m"></i> View
                    </a>
                </td>
            </tr>
          <% end %>
        </tbody>
    </table>
</div>

<%= paginate @form_submissions %>
<p class="uk-padding"> <%= total_count(@form_submissions) %></p>

<!-- model -->
<div id="delete-modal" uk-modal>
    <div class="uk-modal-dialog">
        <button class="uk-modal-close-default" type="button" uk-close></button>
        <div class="uk-modal-header">
            <h2 class="uk-modal-title">Delete form_submission</h2>
        </div>
        <div class="uk-modal-body">
          <p>Are you sure you want to delete <span class="resource_name"></span>?</p>
          <p class="text-danger">This cannot be undone.</p>
        </div>
        <div class="uk-modal-footer">
          <button class="uk-button uk-button-default uk-modal-close" type="button">Cancel</button>
          <button class="uk-button uk-button-danger confirm-button" type="button">Delete</button>
        </div>
    </div>
</div>
