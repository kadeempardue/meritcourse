<%= form_for([@course, @review], html: { "uk-grid" => true, class: "uk-grid-small large form #{'error' if flash[:error]} #{'notice' if flash[:notice]}" }) do |f| %>
  <div class="uk-width-1-1">
    <div class="uk-form-label"> Student </div>
    <%= f.select :student_id, options_from_collection_for_select(Student.all, :id, :friendly_name, @review&.student&.id.to_s), {}, class: "uk-select", required: true %>
  </div>
  <div class="uk-width-1-1">
    <div class="uk-form-label"> Comment </div>
    <div class="uk-text-meta"> What the student said. </div>
        <%= f.text_area :comment, class: "uk-textarea", rows: 10, required: true %>
  </div>
  <div class="uk-width-1-3">
    <div class="uk-form-label"> Rating </div>
    <div class="uk-text-meta"> Values 1 through 5. Decimals are allowed. </div>
    <%= f.text_field :rating, class: "uk-input", minlength: 1, maxlength: 4, required: true %>
  </div>

  <div class="uk-width-1-1">
    <input class="button grey uk-width-1-1@s uk-width-1-4@m mt-3 ml-0 mr-0" type="submit" class="button" value="Save">
  </div>
<% end %>
