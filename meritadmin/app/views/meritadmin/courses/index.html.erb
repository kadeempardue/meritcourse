<div class="uk-flex uk-flex-middle">
  <h3 class="mb-0 mr-3"> <i class="icon-line-awesome-graduation-cap"></i> Courses </h3>
  <a href="<%= new_course_path %>" class="button grey"
      uk-tooltip="title: Add New Course ; delay: 500 ; pos: top ;">
      <i class="icon-feather-plus"></i> Add New
  </a>
</div>

<%= render "meritadmin/shared/search" %>
<%= render "collection_table", courses: @courses %>

<%= paginate @courses %>
<p class="uk-padding"> <%= total_count(@courses) %></p>

<div id="delete-modal" uk-modal>
    <div class="uk-modal-dialog">
        <button class="uk-modal-close-default" type="button" uk-close></button>
        <div class="uk-modal-header">
            <h2 class="uk-modal-title">Delete Course</h2>
        </div>
        <div class="uk-modal-body">
          <p>Are you sure you want to delete <span class="resource_name"></span>?</p>
          <p class="text-danger">This cannot be undone.</p>
        </div>
        <div class="uk-modal-footer">
          <button class="uk-button uk-button-default uk-modal-close" type="button">Cancel</button>
          <button class="uk-button uk-button-danger confirm-button" type="button">Delete</button>
        </div>
    </div>
</div>
