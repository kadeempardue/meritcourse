<div class="uk-flex uk-flex-middle">
  <a href="<%= course_path(@course) %>" class="button grey"
      uk-tooltip="title: View Course ; delay: 500 ; pos: top ;">
      <i class="icon-material-outline-arrow-back"></i> Back To Course: <%= @course.name %>
  </a>
</div>

<div class="uk-card-default rounded mt-4">
    <div class="uk-card-header">
        <i class="icon-feather-user mr-2"></i> <%= @course.name %>
    </div>
    <div class="uk-card-body">
        <div uk-grid>
          <%= render "form" %>
        </div>
    </div>
</div>
