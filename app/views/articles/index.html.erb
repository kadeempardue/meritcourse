<div class="container  header-padding-top mb-5" uk-height-viewport="offset-top: true; offset-bottom: true">

    <div class="section-title pt-5">
      <h1> <%= setting.blog_name %> </h1>
    </div>

    <div class="mt-7 uk-grid-large uk-child-width-1-2@ uk-child-width-1-3@m" uk-grid>

        <% if @articles.present? %>
          <% @articles&.each do |article| %>
          <div class="">
            <a href="/articles/<%= article.slug %>" class="blog-post blog-post-card">
                  <!-- Blog Post Thumbnail -->
                  <div class="blog-post-thumbnail">
                      <div class="blog-post-thumbnail-inner">
                        <img uk-img data-src="<%= article.featured_image %>" width="100%" alt="<%= article.title %>">
                      </div>
                  </div>
                  <!-- Blog Post Content -->
                  <div class="blog-post-content">
                      <h3><%= article.title %></h3>
                  </div>
                  <div class="blog-post-footer">
                      <div class="blog-post-content-info">
                          <span class="blog-post-info-tag button soft-primary">  <%= article.category %> </span>
                          <span class="blog-post-info-date"><%= friendly_date(article.created_at) %></span>
                      </div>
                  </div>
              </a>
          </div>

          <% end %>
        <% else %>
          <h4>No blog posts</h4>
        <% end %>
      </div>

</div>
