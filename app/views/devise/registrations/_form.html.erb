<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "p-4 form #{'error' if flash[:error]} #{'notice' if flash[:notice]}" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="uk-flex-center mb-4" uk-grid>
    <%= image_tag setting.logo_url, width: 400, alt: @tenant&.name  rescue nil %>
  </div>

  <h4 class="uk-text-bold uk-text-center">Admin Sign Up</h4>

  <div class="uk-form-label mt-4">
    First Name
  </div>
  <div class="uk-inline">
    <span class="uk-form-icon"><i class="icon-feather-user"></i></span>
    <%= f.text_field :first_name, autofocus: true, placeholder: "First Name",  class: 'uk-input uk-form-width-large', required: true %>
  </div>

  <div class="uk-form-label mt-4">
    Last Name
  </div>
  <div class="uk-inline">
    <span class="uk-form-icon"><i class="icon-feather-user"></i></span>
    <%= f.text_field :last_name, autofocus: true, placeholder: "Last Name",  class: 'uk-input uk-form-width-large', required: true %>
  </div>

  <div class="uk-form-label mt-4">
    Email Address
  </div>
  <div class="uk-inline">
    <span class="uk-form-icon"><i class="icon-feather-user"></i></span>
    <%= f.email_field :email, autofocus: true, placeholder: "E-mail address",  class: 'uk-input uk-form-width-large', required: true %>
  </div>

  <div class="uk-form-label mt-4">
    Password
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
  </div>
  <div class="uk-inline">
    <span class="uk-form-icon"><i class="icon-feather-lock"></i></span>
    <%= f.password_field :password, placeholder: "Password", class: 'uk-input uk-form-width-large', required: true %>
  </div>

  <div class="uk-form-label mt-4">
    Confirm Password
  </div>
  <div class="uk-inline">
    <span class="uk-form-icon"><i class="icon-feather-lock"></i></span>
    <%= f.password_field :password_confirmation, placeholder: "Confirm Password", class: 'uk-input uk-form-width-large', required: true %>
  </div>

  <div class="uk-form-label mt-4">
    Sign Up Key
  </div>
  <div class="uk-inline uk-margin-bottom">
    <span class="uk-form-icon"><i class="icon-line-awesome-key"></i></span>
    <%= text_field_tag :sign_up_key, nil, placeholder: "********", class: 'uk-input uk-form-width-large', required: true %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: 'button grey uk-width-1 mt-3 ml-0 mr-0' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
