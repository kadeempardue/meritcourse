<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "p-4 form #{'error' if flash[:error]} #{'notice' if flash[:notice]}" }) do |f| %>
<%= render "devise/shared/error_messages", resource: resource %>

  <div class="uk-flex-center mb-4" uk-grid>
    <%= image_tag setting.logo_url, width: 400, alt: @tenant&.name  rescue nil %>
  </div>


  <h4 class="uk-text-bold uk-text-center">Admin Login</h4>

  <div class="uk-form-label mt-4">
    Email Address
  </div>
  <div class="uk-inline">
    <span class="uk-form-icon"><i class="icon-feather-user"></i></span>
    <%= f.email_field :email, autofocus: true, placeholder: "E-mail address",  class: 'uk-input uk-form-width-large', required: true %>
  </div>

  <div class="uk-form-label mt-4">
    Password
  </div>
  <div class="uk-inline uk-margin-bottom">
    <span class="uk-form-icon"><i class="icon-feather-lock"></i></span>
    <%= f.password_field :password, placeholder: "Password", class: 'uk-input uk-form-width-large', required: true %>
  </div>



  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Login", class: 'button grey uk-width-1 mt-3 ml-0 mr-0' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
